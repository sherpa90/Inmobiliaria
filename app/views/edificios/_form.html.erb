<%= form_with(model: edificio, class: 'form-group') do |form| %>
  <% if edificio.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(edificio.errors.count, "error") %> prohibieron que este edificio se guardara:</h2>
      
      <ul>
        <% edificio.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Nombre del edificio -->
  <div class="form-group">
    <%= form.label :nombre %>
    <%= form.text_field :nombre, class: 'form-control' %>
  </div>

  <!-- Dirección del edificio -->
  <div class="form-group">
    <%= form.label :direccion %>
    <%= form.text_field :direccion, class: 'form-control' %>
  </div>

  <!-- ID de la Comuna -->
  <div class="form-group">
    <%= form.label :comuna_id %>
    <%= form.number_field :comuna_id, class: 'form-control' %>
  </div>

  <!-- Servicios del edificio -->
  <div class="form-check">
    <%= form.check_box :piscina, class: 'form-check-input' %>
    <%= form.label :piscina, class: 'form-check-label' %>
  </div>

  <div class="form-check">
    <%= form.check_box :quincho, class: 'form-check-input' %>
    <%= form.label :quincho, class: 'form-check-label' %>
  </div>

  <div class="form-check">
    <%= form.check_box :gimnasio, class: 'form-check-input' %>
    <%= form.label :gimnasio, class: 'form-check-label' %>
  </div>

  <div class="form-check">
    <%= form.check_box :areas_verdes, class: 'form-check-input' %>
    <%= form.label :areas_verdes, class: 'form-check-label' %>
  </div>

  <div class="form-check">
    <%= form.check_box :juegos_infantiles, class: 'form-check-input' %>
    <%= form.label :juegos_infantiles, class: 'form-check-label' %>
  </div>

  <div class="form-check">
    <%= form.check_box :estacionamiento, class: 'form-check-input' %>
    <%= form.label :estacionamiento, class: 'form-check-label' %>
  </div>

  <div class="form-check">
    <%= form.check_box :pet_friendly, class: 'form-check-input' %>
    <%= form.label :pet_friendly, class: 'form-check-label' %>
  </div>

  <!-- Botón de envío -->
  <div class="form-group">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
