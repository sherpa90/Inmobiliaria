<%= form_with(model: @edificio, local: true) do |form| %>
  <div class="field">
    <%= form.label :nombre %>
    <%= form.text_field :nombre %>
  </div>

  <div class="field">
    <%= form.label :direccion %>
    <%= form.text_field :direccion %>
  </div>

  <div class="field">
    <%= form.label :comuna_id %>
    <%= form.collection_select :comuna_id, Comuna.all, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :departamento_id %>
    <%= form.collection_select :departamento_id, Departamento.all, :id, :numero %>
  </div>

  <!-- ... otros campos del edificio ... -->

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>