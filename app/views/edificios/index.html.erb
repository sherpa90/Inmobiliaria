<h1>Edificios</h1>

<!-- Tabla de edificios -->
<div class="table-responsive">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Direcci칩n</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <!-- Iterar sobre cada edificio y mostrar en la tabla -->
      <% @edificios.each do |edificio| %>
        <tr>
          <td><%= edificio.nombre %></td>
          <td><%= edificio.direccion %></td>
          <td>
            <!-- Acciones: Ver, Editar, Eliminar -->
            <%= link_to 'Ver', edificio, class: 'btn btn-primary btn-sm' %>
            <%= link_to 'Editar', edit_edificio_path(edificio), class: 'btn btn-warning btn-sm' %>
            <%= link_to 'Eliminar', edificio, method: :delete, data: { confirm: 'Est치s seguro?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<!-- Bot칩n para crear un nuevo edificio -->
